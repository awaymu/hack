<script>
  $(document).ready(function() {
      $("td.addfollow").click(function(event){
          event.preventDefault();
          var ide= $(this).attr("data-id")
          $.ajax({
              url: '/add_follow/'+ide,
              type: 'GET',
          }).done(function(res) {
            location.reload();
          })
      });

      $('#switch').click(function() {
          if (!$(this).is(':checked')) {
            $(".nofollow").removeClass("hide")

          }else{
              $(".nofollow").addClass("hide")
          }
      });
      $('#switch2').click(function() {
          if (!$(this).is(':checked')) {
            $(".cuenta_valida").removeClass("show-force")

          }else{
              $(".cuenta_valida").addClass("show-force")
          }
      });
  })
</script>