    height: 40px;
    background: grey;
    display: block;
    border-radius: 100px;
        position: absolute;
    right: 8px;
    top: 8px;
}


label.left{
  right: inherit;
}

label:after {
  content: '';
  position: absolute;
  top: 5px;
  left: 5px;
  width: 35px;
  height: 29px;
  background: #fff;
  border-radius: 90px;
  transition: 0.3s;
}

