<div id="wrapper">
  <h1>Table of Boludos</h1>
  <input type="checkbox" id="switch" /><label for="switch">Toggle</label>
  <input type="checkbox" id="switch2" /><label class="left" for="switch2">Toggle</label>
  
  <table id="keywords" cellspacing="0" cellpadding="0">
    <thead>
      <tr>
        <th><span>USUARIO</span></th>
        <th><span>PASSWORD</span></th>
        <th><span>R</span></th>
        <th><span>FOLLOW</span></th>
      </tr>
    </thead>
    <tbody>
      {{#each boludos}}
         <tr  class="{{#if this.valida}} cuenta_valida {{/if}}{{#if this.follow}} follow none{{else}} nofollow{{/if}} ">
          <td >{{this.name}}</td>
          <td>{{this.pass}}</td>
          <td>{{#if this.repetido}}{{this.repetido}}{{else}}-{{/if}}</td>
          {{#if this.follow}}
          <td class="" ><img src="/img/follow.png" alt=""></td>
          {{else}}
          <td class="addfollow" data-id={{this._id}}><img src="/img/add-friend.png" alt=""></td>
          {{/if}}
        </tr> 
      {{/each}}
     
      
    </tbody>
  </table>
</div> 



